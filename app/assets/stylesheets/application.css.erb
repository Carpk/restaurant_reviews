@font-face {
  font-family: 'DroidSerif';
  src: url(<%= asset_path('DroidSerif.eot') %>);
  src: url(<%= asset_path('DroidSerif.ttf') %>) format('truetype');
  font-weight: 300;
  font-style: normal;
}

@font-face {
  font-family: 'GravitasOne';
  src: url(<%= asset_path('GravitasOne.eot') %>);
  src: url(<%= asset_path('GravitasOne.ttf') %>) format('truetype');
  font-weight: 300;
  font-style: normal;
}

.inpt-data  {
  font-family: 'GravitasOne';
}

body {
  font-family: 'DroidSerif';
  margin: 0 0 0 0;
  text-shadow: 1px 1px 2px black;
  background-image: url(<%= asset_path('Franklin_Street.jpg') %>);
  background-repeat: no-repeat;
  background-size: cover;
  min-height: 100vh;
}

.img-bkgrnd{
  background-repeat: no-repeat;
  background-size: cover;
  background-position: 0px;
  text-shadow: 2px 2px black;
  padding: 5px 0px 5px;
  margin-bottom: 15px;
  min-height: 95px
}

.tint {
    z-index: 1;
    height: 100%;
    width: 100%;
    position: fixed;
    overflow: auto;
    top: 0px;
    left: 0px;
    background: rgba(0, 0, 0, 0.7);
}
