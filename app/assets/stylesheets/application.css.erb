@font-face {
  font-family: 'DroidSerif';
  src: url(<%= asset_path('DroidSerif.eot') %>);
  src: url(<%= asset_path('DroidSerif.ttf') %>) format('truetype');
  font-weight: 300;
  font-style: normal;
}

@font-face {
  font-family: 'GravitasOne';
  src: url(<%= asset_path('GravitasOne.eot') %>);
  src: url(<%= asset_path('GravitasOne.ttf') %>) format('truetype');
  font-weight: 300;
  font-style: normal;
}

.view-section {
  height: 100vh;
}

.title-font  {
  font-family: 'GravitasOne';
}

body {
  font-family: 'DroidSerif';
  margin: 0 0 0 0;
  min-height: 100vh;
}

.default-background {
  background-image: url(<%= asset_path('Franklin_Street.jpg') %>);
  background-repeat: no-repeat;
  background-size: cover;
}

.featured-background {
  background-image: url(<%= asset_path('burger.jpg') %>);
  background-repeat: no-repeat;
  background-size: cover;
}

.latest-background {
  background-image: url(<%= asset_path('ruben.jpg') %>);
  background-repeat: no-repeat;
  background-size: cover;
}

.categories-background {
  background-image: url(<%= asset_path('chicken_pot_pie.jpg') %>);
  background-repeat: no-repeat;
  background-size: cover;
}

.img-bkgrnd{
  background-repeat: no-repeat;
  background-size: cover;
  background-position: 0px;
  text-shadow: 2px 2px black;
  padding: 0 0 0 0;
  margin-bottom: 15px;
  height: 95px;
  border-radius: 2px;
}

.tint {
    z-index: 1;
    height: 100%;
    width: 100%;
    overflow: auto;
    top: 0px;
    left: 0px;
    background: rgba(0, 0, 0, 0.7);
    border-radius: 2px;
}

.img-peek {
  background-image: url(<%= asset_path('wonton_soup.jpg') %>);
  background-repeat: no-repeat;
  background-size: cover;
  height: 60vh;
  margin-top: 8vh;
  margin-bottom: 8vh;
} 

.about-msg {
  margin-top: 30vh;
  margin-bottom: 20vh;
}
.center-img {
  display: block;
  margin: 0 auto;
}

.circle-vector-icon {
  background-color: white;
  border: 3px solid black;
  border-radius: 90px;
  padding: 12px;
}

.img-peek .jumbotron {
  margin-top: 8.5vh;
  color: white;
  text-shadow: 0px 0px 34px black;
} 

.img-peek .jumbotron a {
  margin-right: 8px;
}

.dark-background {
  background-color: rgba(0, 0, 0, 0.75);
  border-radius: 6px;
  padding: 3px 5px 2px 5px;
}

.set-width {
  width: 100%;
}
