@font-face {
  font-family: 'defused';
  src: url(<%= asset_path('defused.eot') %>);
  src: url(<%= asset_path('defused.ttf') %>) format('truetype');
  font-weight: 300;
  font-style: normal;
}

@font-face {
  font-family: 'GravitasOne';
  src: url(<%= asset_path('GravitasOne.eot') %>);
  src: url(<%= asset_path('GravitasOne.ttf') %>) format('truetype');
  font-weight: 300;
  font-style: normal;
}

.inpt-data  {
  font-family: 'GravitasOne';
}

body {
  font-family: 'defused';
  margin: 0 0 0 0;
  background-image: url(<%= asset_path('Franklin_Street.jpg') %>);
  background-repeat: no-repeat;
  background-size: cover;
  min-height: 100vh;
}

.img-bkgrnd{
  background-repeat: no-repeat;
  background-size: cover;
  background-position: 0px;
  text-shadow: 2px 2px black;
  padding: 5px 0px 5px;
  margin-bottom: 15px;
}

/* cut and paste for sticky footer*/
html {
  position: relative;
  min-height: 100%;
}
body {
  /* Margin bottom by footer height */
  margin-bottom: 60px;
}
.footer {
  position: absolute;
  bottom: 0;
  width: 100%;
  /* Set the fixed height of the footer here */
  height: 60px;
  background-color: #f5f5f5;
}
