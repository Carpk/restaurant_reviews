<div class="feature-box">
  <h3>Create a Blog topic:</h3>
  <%= form_for @blog, url: admin_blogs_path(1), html: {role: "form"} do |f| %>
    <div class="form-group">
      <%= f.label :title %>:<br>
      <%= f.text_field :title, :class => 'inpt-data', :required => true  %>
    </div>
    <div class="form-group">
      <%= radio_button_tag 'tags', 'restaurant'%>Restaurants
      <%= radio_button_tag 'tags', 'category' %>Categories<br>
      <%= select_tag "restaurant_id", options_for_select(@restaurants.collect{|r| [r.name, r.id]}), id: "restaurant", class:"btn btn-default dropdown-toggle"%>
      <%= select_tag "category_id", options_for_select(@categories.collect{|c| [c.name, c.id]}), id: "category", class:"btn btn-default dropdown-toggle"%>
    </div>
    <div class="form-group">
      <%= f.label :description%>:<br>
      <%= f.text_area :description, size: "20x6", :class => 'inpt-data'  %>
    </div>
    <%= f.submit "Create", :class => "btn btn-primary" %>
  <% end %>
</div>
