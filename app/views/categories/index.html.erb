<div class="feature-box">
  <div class="row">

    <div class="col-md-7">
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Restaurants</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td><%= category.name %></td>
              <td><%= category.restaurants.count %></td>
              <td>
                <%= link_to "Edit", edit_admin_category_path(1, category.name) %>-
                <%= link_to "Delete", admin_category_path(1, category.id), method: :delete, data: { confirm: 'Are you certain you want to delete this?' } %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-5">
    <%= form_for @new_category, url: admin_categories_path, html: {role: "form"} do |f| %>
      <div class="form-group">
        <%= f.label :title %>:<br>
        <%= f.text_field :name, :class => 'inpt-data' %><br>
      </div>
      <div class="form-group">
        <%= f.label :description %>:<br>
        <%= f.text_area :description, :class => 'inpt-data txt-field' %><br>
      </div>
      <%= f.submit "Save", :class => 'btn btn-primary' %>
      <%= link_to "Cancel", admin_path(1), class: 'btn btn-danger'%>
    <%end%>
    </div>
  </div>

</div>
