
<div class="feature-box">
  <% @restaurants.in_groups_of(3, false) do |group| %>
    <div class="row">
      <% group.each do |restaurant| %>
        <div class="col-md-4">
          <div class="img-bkgrnd" style="background-image: url(<%=restaurant.picture.url%>)">
            <center>
              <h3><%= link_to restaurant.name, restaurant_path(restaurant.name) %></h3>
            </center>
          </div>
          <%= restaurant.area.name %><br>
          <%= restaurant.body %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
