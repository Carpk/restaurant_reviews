<div class="feature-box row">
  <h2>Edit Review:</h2>

  <div class="col-md-3"></div>
  <div class="col-md-6">
    <%= form_for @review, url: admin_restaurant_review_path, html: {role: "form"} do |f| %>
      <div class="form-group">
      <%= f.label :title %>:<br>
      <%= f.text_field :title, :class => 'inpt-data' %><br>
      </div>
      <div class="form-group">
      <%= f.label :entree %>:<br>
      <%= f.text_field :entree, :class => 'inpt-data' %><br>
      </div>
      <div class="form-group">
      <%= f.label :price %>:<br>
      <%= f.number_field :price, :class => 'inpt-data' %><br>
      </div>
      <div class="form-group">
      <%= f.label :score %>:<br>
      <%= f.number_field :score, :class => 'inpt-data' %><br>
      </div>
      <div class="form-group">
      <%= f.label :review %>:<br>
      <%= f.text_area :body, :class => 'inpt-data txt-field' %><br>
      </div>
      <%= f.submit "Save", :class => 'btn btn-primary' %>
      <%= link_to "Cancel", admin_path(1), class: 'btn btn-danger'%>
    <% end %>
  </div>

  <div class="col-md-3">
  </div>

</div>
