<div class="feature-box">
  <div class="row">
    <h1>Featured</h1>
    <% @featured_list.each do |featured| %>
      <div class="col-md-3">
        <h3><%= link_to featured.name, restaurant_path(featured.name) %></h3>
        <%= featured.body %>
      </div>
    <% end %>
  </div>
  <div class="row">
    <h1>Latest</h1>
    <% @latest_reviews.each do |review| %>
      <div class="col-md-3">
        <%= link_to review.title, restaurant_review_path(review.restaurant.name, review.title) %><br>
        @ <%= link_to review.restaurant.name, restaurant_path(review.restaurant.name) %><br>
        <%= review.body_sample %>
      </div>
    <% end %>
  </div>
</div>

<div class="feature-box">
  <div class="row">
    <div class="col-md-12">
      <h1>Categories</h1>
      <% @categories.each do |category| %>
        <%= link_to category.set, category_path(category.set) %>
      <% end %>
    </div>
  </div>
</div>
