<div class="feature-box">
  <div class="row">
    <h1>Featured</h1>
    <% @featured_list.each do |featured| %>
      <div class="col-md-3 img-bkgrnd" style="background-image: url(<%=featured.picture%>)">
        <h3><%= link_to featured.name, restaurant_path(featured.name) %></h3>
        <%= featured.body %>
      </div>
    <% end %>
  </div>
  <div class="row">
    <h1>Latest</h1>
    <% @latest_reviews.each do |review| %>
      <div class="col-md-3">
        <h4><%= link_to review.title, restaurant_review_path(review.restaurant.name, review.title) %></h4>
        @ <%= link_to review.restaurant.name, restaurant_path(review.restaurant.name) %><br>
        <%= review.body_sample %>
      </div>
    <% end %>
  </div>
</div>

<div class="feature-box">
  <div class="row">
    <h1>Categories</h1>
    <% @categories.each do |category| %>
      <div class="col-md-3 img-bkgrnd" style="background-image: url(<%=category.set_picture%>)">
        <center>
          <h3><%= link_to category.name, category_path(category.name) %></h3>
        </center>
      </div>
    <% end %>
  </div>
</div>
